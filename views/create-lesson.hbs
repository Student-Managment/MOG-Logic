<div class="row">
    <form action="/subjects/lessons/create/{{subID}}" method="POST" class="col s12">
        <h2>Ավելացնել թեմա</h2>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="topic">
                <label>Թեմա</label>
            </div>

            <div class="input-field col s6">
                <input type="text" name="type">
                <label>Տեսակը</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input type="date" name="date">
                <label>Ամսաթիվ</label>
            </div>
        </div>

        <div class="btn-padding">
            <button type="submit" class="btn">Ավելացնել</button>
        </div>
    </form>
</div>
