<div class="row">
    <form action="/lessons/create" method="POST" class="col s12">
        <h2>Ավելացնել թեմա</h2>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="topic">
                <label>Թեմա</label>
            </div>

            <div class="input-field col s6">
                <input type="text" name="type">
                <label>Տեսակը</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <input type="date" name="date">
                <label>Ամսաթիվ</label>
            </div>

            <div class="input-field col s6">
                <select name="subject_id" id="subject_id">
                    <option value="" disabled selected>Ընտրել առարկա</option>
                    {{#each subjects}}
                        <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <label>Ընտրել առարկա</label>
            </div>
        </div>


        <div class="btn-padding">
            <button type="submit" class="btn">Ավելացնել</button>
        </div>
    </form>
</div>
