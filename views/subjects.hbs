<div class="subject">
    <div class="table-head">
        <h2>Առարկաներ({{count}})</h2>
        <a class="btn btn-small" href="/subjects/create">Ավելացնել առարկա</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Առարկայի անվանում</th>
            <th scope="col">Դասախոս</th>
            <th scope="col">Թեմաներ</th>
            <th scope="col">Գործողություններ</th>
        </tr>
        </thead>
        <tbody>
        {{#each subjects}}
            <form action="subjects/delete/{{_id}}" method="GET">
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><a href="/subjects/{{_id}}">{{name}}</a></td>
                    <td>{{#each lecturer}}
                            {{fullName}}
                        {{/each}}    
                    </td>
                    <td>
                        <a href="subjects/lessons/{{_id}}">Թեմաներ ({{lessons_count}})</a>
                    </td>
                    <td>
                        <button class="btn btn-small" type="submit">Ջնջել</button>
                    </td>
                </tr>
            </form>
        {{/each}}
        </tbody>
    </table>
</div>

