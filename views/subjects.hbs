<div class="subject">
    <div class="table-head">
        <h2>Subjects</h2>
        <a class="btn btn-small" href="/subjects/create">Add subject</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Subject Name</th>
            <th scope="col">ID</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#each subjects}}
            <form action="subjects/delete/{{_id}}" method="GET">
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{name}}</td>
                    <td>{{_id}}</td>
                    <td>
                        <a class="btn btn-small" href="/subjects/update/{{_id}}">Edit</a>
                        <button class="btn btn-small" type="submit">Delete</button>
                    </td>
                </tr>
            </form>
        {{/each}}
        </tbody>
    </table>
</div>

