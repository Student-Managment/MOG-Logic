<div class="row">
    <form action="/lecturers/create" method="POST" class="col s12">
        <h2>Ավելացնել դասախոս</h2>

        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="fullName">
                <label>Անուն, ազգանուն</label>
            </div>

            <div class="input-field col s6">
                <select name="subject_id" id="subject_id">
                    <option value="" disabled selected>Ընտրել առարկա</option>
                    {{#each subjects}}
                        <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <label>Ընտրել առարկա</label>
            </div>
        </div>

        <button type="submit" class="btn">Ավելացնել</button>
    </form>
</div>

