<div class="row">
    <form action="/subjects/{{subject._id}}" method="POST" class="col s12">
        <h2>{{subject.name}}</h2>

        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="name" value="{{subject.name}}">
                <label>Առարկայի անվանուն</label>
            </div>

            <div class="input-field col s6">
                <select name="group_id" id="group_id">
                    <option value="" disabled selected>Ընտրել խումբ</option>
                    {{#each groups}}
                        <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <label>Ընտրել խումբ</label>
            </div>
        </div>

        <div class="btn-padding">
            <button type="submit" class="btn">Փոփոխել</button>
        </div>

    </form>
</div>

